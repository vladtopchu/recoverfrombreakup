<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/indigo</item>
        <item name="colorPrimaryDark">#6C5897</item>
        <item name="colorAccent">@color/indigo</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>
    
    <style name="NumberPickerTheme" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/white</item>
        <item name="colorControlNormal">@android:color/transparent</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="background">@color/indigo</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="activitymain_title">
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="activitymain_subtitle">
        <item name="android:fontFamily">@font/opensans</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/indigo</item>
    </style>

    <style name="activitymain_navigation_button_active">
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textSize">13sp</item>
        <item name="android:layout_marginTop">3dp</item>
        <item name="android:textColor">@color/indigo</item>
    </style>

    <style name="activitymain_navigation_button_inactive">
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textSize">11.5sp</item>
        <item name="android:layout_marginTop">3dp</item>
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="activitymain_reminder">
        <item name="fontFamily">@font/opensans</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="activitymain_buy">
        <item name="fontFamily">@font/montserrat_bold</item>
        <item name="android:textColor">@color/awful_green</item>
        <item name="android:textSize">18sp</item>
    </style>
    
    <style name="recycler_item">
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="fontFamily">@font/montserrat</item>
    </style>

    <style name="recycler_item_active" parent="recycler_item">
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/montserrat_bold</item>
        <item name="android:textSize">17sp</item>
    </style>
    
    <style name="tutorial_title">
        <item name="fontFamily">@font/montserrat_bold</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/pink</item>
    </style>

    <style name="tutorial_subtitle">
        <item name="fontFamily">@font/opensans_bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
    </style>
    
    <style name="button_to_intro">
        <item name="android:includeFontPadding">true</item>
        <item name="fontFamily">@font/montserrat_bold</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="task_text">
        <item name="fontFamily">@font/opensans</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="task_title" parent="tutorial_title">
        <item name="android:textColor">@color/indigo</item>
        <item name="android:textSize">19sp</item>
    </style>

    <style name="bottomNav">
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="bottomNavTextActive" parent="bottomNav">
        <item name="android:textColor">@color/indigo</item>
        <item name="fontFamily">@font/montserrat_bold</item>
    </style>

    <style name="bottomNavTextInactive" parent="bottomNav">
        <item name="fontFamily">@font/montserrat</item>
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="buttonPrimary">
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <style name="CircleImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

</resources>
