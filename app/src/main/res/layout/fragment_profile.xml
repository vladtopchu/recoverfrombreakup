<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/go_auth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Войти"
        tools:visibility="gone"
        style="@style/buttonPrimary"
        android:background="@drawable/button_primary"
        android:layout_centerInParent="true"/>

    <LinearLayout
        android:id="@+id/profile_parent"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:visibility="visible"
        android:padding="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Вы вошли как"
            style="@style/bottomNavTextActive"
            android:textSize="22sp"
            android:layout_marginBottom="10dp"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            app:cardElevation="10dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:padding="15dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/profile_picture"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/ic_profile_active"
                        android:layout_marginBottom="10dp"/>

                    <TextView
                        android:id="@+id/email"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="testlongemail@gmail.com"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/button_logout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/buttonPrimary"
                    android:background="@drawable/button_primary"
                    android:text="Выйти"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <View
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="1.2dp"
            android:background="@color/light_gray"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Статус приложения"
            style="@style/bottomNavTextActive"
            android:textSize="22sp"
            android:layout_marginVertical="10dp"/>

        <TextView
            android:id="@+id/status_full"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:textColor="@color/awful_as_fuck_green"
            android:text="Полная версия!"/>

        <LinearLayout
            android:id="@+id/status_free"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Бесплатная версия"/>

            <TextView
                android:id="@+id/buy"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                style="@style/buttonPrimary"
                android:background="@drawable/button_primary"
                android:gravity="center"
                android:layout_marginVertical="0dp"
                android:layout_marginStart="20dp"
                android:text="Приобрести"/>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>