<layer-list
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape
            android:shape="rectangle">
            <corners
                android:radius="12dp"/>
            <solid
                android:color="#AC77AF"/>
        </shape>
    </item>
    <item
        android:right="2dp"
        android:left="2dp"
        android:bottom="4dp">
        <shape
            android:shape="rectangle">
            <corners
                android:radius="10dp"/>
            <solid
                android:color="@color/pink"/>
        </shape>
    </item>
</layer-list>
